<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFF68F">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/tucao_toubeijing1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/jingdian_zong_fanhui"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/tucao_toubeijing_2"
            android:onClick="jingdian_zong" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="热门景点"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="80dp"
            android:layout_marginLeft="26dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="选择城市:"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold" />
        <!--
          <Button
            android:id="@+id/jingdian_xuanzechengshi"
            android:background="@drawable/tucao_toubeijing1"
            android:layout_width="18dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="选择城市"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" 
            android:layout_marginLeft="100dp"/>
        -->

        <Spinner
            android:id="@+id/spinner_chengshi"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:entries="@array/chengshi"
            android:prompt="@string/xuanzechengshi" 
           />
    </LinearLayout>

    <ScrollView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        >
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal">
     	<LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="13dp">
        <ImageButton 
            android:id="@+id/jingdian_zong_1.1"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_datong_hengshan"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="大同-恒山"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
        <LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="8dp">
        <ImageButton 
            android:id="@+id/jingdian_zong_1.2"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_taiyuan_fenheerku"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="太原-汾河二库"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
       
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal">
     	<LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="13dp">
        <ImageButton 
            android:id="@+id/jingdian_zong_2.1"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_xinzhou_wutaishan"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="忻州-五台山"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
        <LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="8dp">
        <ImageButton 
            android:id="@+id/jingdian_zong_2.2"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_linfen_hukoupubu"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="临汾-壶口瀑布"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
       
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal">
     	<LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="13dp">
        <ImageButton 
            android:id="@+id/jingdian_zong_3.1"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_jinzhong_qiaojiadayuan"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="晋中-乔家大院"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
        <LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="8dp">
        <ImageButton 
            android:id="@+id/jingdian_zong_3.2"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_yuncheng_pingyaogucheng"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="运城-平遥古城"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
        
    </LinearLayout>
     <LinearLayout android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal">
     	<LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="13dp">
        <ImageButton 
            android:id="@+id/jingdian_zong_4.1"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_datong_yungangshiku"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="大同-云冈石窟"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
        <LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="8dp">
        <ImageButton 
            android:id="@+id/jingdian_zong_4.2"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_jinzhong_mianshan"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="晋中-绵山"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
        
    </LinearLayout>
    </LinearLayout>
   </ScrollView>
</LinearLayout>

