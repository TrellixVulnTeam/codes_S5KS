<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#dfefebe7">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/tucao_toubeijing1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dengluzhanghao_fanhui"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/tucao_toubeijing_2"
            android:onClick="dengluBtn" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="登陆账号"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
        
    </LinearLayout>

     <ScrollView
        android:id="@+id/denglu_juanzhou"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
         android:background="#ffefebe7">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/denglu_kuangjia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10.0dip" >

                <TextView
                    android:id="@+id/denglu_zhanghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="20.0dip"
                    android:paddingTop="10.0dip"
                    android:text="账号:"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/denglu_zhanghao_suru"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/denglu_zhanghao"
                    android:layout_toRightOf="@+id/denglu_zhanghao"
                    android:background="@drawable/edit_text_x"
                    android:editable="true"
                    android:hint="请输入账号"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/denglu_mima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/denglu_zhanghao"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="25.0dip"
                    android:paddingTop="10.0dip"
                    android:text="密码:"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/denglu_mima_suru"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/denglu_zhanghao_suru"
                    android:layout_alignTop="@+id/denglu_mima"
                    android:layout_below="@+id/denglu_zhanghao_suru"
                    android:layout_toRightOf="@+id/denglu_mima"
                    android:background="@drawable/edit_text_x"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/denglu_button"
                    android:layout_width="145.0dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/denglu_mima_suru"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="15.0dip"
                    android:background="@drawable/android_big_button_x"
                    android:gravity="center"
                    android:onClick="dengluBtn"
                    android:text="登录"
                    android:textColor="#ff000000"
                    android:textSize="20.0sp" />

                <Button
                    android:id="@+id/denglu_zhuce"
                    android:layout_width="145.0dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/denglu_mima_suru"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="15.0dip"
                    android:layout_toRightOf="@+id/denglu_button"
                    android:background="@drawable/android_big_button_x"
                    android:gravity="center"
                    android:onClick="dengluBtn"
                    android:text="注册"
                    android:textColor="#ff000000"
                    android:textSize="20.0sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
