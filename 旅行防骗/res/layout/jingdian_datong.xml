<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFF68F">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/tucao_toubeijing1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/jingdian_datong_fanhui"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/tucao_toubeijing_2"
            android:onClick="jingdian_datong" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="大同景点"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
        
    </LinearLayout>
	<ScrollView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        >
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal">
     	<LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="13dp">
        <ImageButton 
            android:id="@+id/jingdian_datong_1.1"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_datong_hengshan"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="浑源-恒山"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
        <LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="8dp">
        <ImageButton 
            android:id="@+id/jingdian_datong_1.2"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_datong_huoshanqun"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="大同县-火山群"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
       
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal">
     	<LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="13dp">
        <ImageButton 
            android:id="@+id/jingdian_datong_2.1"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_datong_shuishentang"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="广灵-水神堂"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
        <LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="8dp">
        <ImageButton 
            android:id="@+id/jingdian_datong_2.2"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_datong_xuankongsi"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="浑源-悬空寺"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal">
     	<LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="13dp">
        <ImageButton 
            android:id="@+id/jingdian_datong_3.1"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_datong_yungangshiku"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="大同市-云冈石窟"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
        <LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="8dp">
        <ImageButton 
            android:id="@+id/jingdian_datong_3.2"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_datongkongzhongcaoyuan"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="灵丘-空中草原"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
    </LinearLayout>
    
    </LinearLayout>
    </ScrollView>
    
</LinearLayout>

  

