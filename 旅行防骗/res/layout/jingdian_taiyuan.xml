<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#E7E7B1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/tucao_toubeijing1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/jingdian_taiyuan_fanhui"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/tucao_toubeijing_2"
            android:onClick="jingdian_taiyuan" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="太原景点"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
        
    </LinearLayout>
	<ScrollView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        >
      <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal">
     	<LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="13dp">
        <ImageButton
            android:onClick="jingdian_taiyuan" 
            android:id="@+id/jingdian_taiyuan_fenheerku"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_taiyuan_fenheerku"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="阳曲-汾河二库"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
        <LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="8dp">
        <ImageButton 
            android:onClick="jingdian_taiyuan" 
            android:id="@+id/jingdian_taiyuan_jinci"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_taiyuan_jinci"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="晋源区-晋祠"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
       
      </LinearLayout>
       <LinearLayout android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal">
     	<LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="13dp">
        <ImageButton
            android:onClick="jingdian_taiyuan" 
            android:id="@+id/jingdian_taiyuan_shuangtasi"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_taiyuan_shuangtasi"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="城区-双塔寺"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
        <LinearLayout android:layout_width="145dp"
     	    android:layout_height="150dp"
     	    android:orientation="vertical"
     	    android:layout_marginLeft="8dp">
        <ImageButton 
            android:onClick="jingdian_taiyuan" 
            android:id="@+id/jingdian_taiyuan_yinzegongyuan"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:background="@drawable/jingdian_taiyuan_yinzegongyuan"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="城区-迎泽公园"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#FFC0CB"/>
        </LinearLayout>
       
      </LinearLayout>
    </LinearLayout>

    </ScrollView>
    
</LinearLayout>
