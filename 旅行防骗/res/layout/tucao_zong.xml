<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/tucao_toubeijing1"
        android:orientation="horizontal" 
        >
        <Button android:layout_width="35dp"
       	 android:layout_height="40dp"
       	 android:id="@+id/tucaozong_fanhui"
       	 android:background="@drawable/tucao_toubeijing_2"
       	 android:onClick="zongfatie_btn"/>
         <Button
            android:id="@+id/zong_fatie"
            android:layout_width="80dp"
            android:background="@drawable/tucao_toubeijing1"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="发帖吐槽"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" 
            android:layout_marginLeft="6dp"
            android:onClick="zongfatie_btn"
            />
     
    </LinearLayout>
    
     <ListView
            android:id="@+id/tucao_display"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000">
        </ListView>

        <ProgressBar
            android:id="@+id/tucao_progressbar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dip"
            android:visibility="gone" />

</LinearLayout>
